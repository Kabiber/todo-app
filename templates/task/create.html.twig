{% extends 'base.html.twig' %}

{% block title %}Create Task{% endblock %}

{% block body %}
    <h1 class="text-center mb-4 space-mono-bold">Создай задачу</h1>

    <form method="post" class="card p-4">
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-3 form-check">
            {{ form_label(form.completed, 'Завершить?', {'label_attr': {'class': 'form-check-label'}}) }}
            {{ form_widget(form.completed, {'attr': {'class': 'form-check-input'}}) }}
        </div>

        <!-- Обновленные кнопки -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary flex-fill me-2 save-button">Сохранить</button>
            <a href="{{ path('task_index') }}" class="btn btn-light flex-fill cancel-button">Отмена</a>
        </div>
        {{ form_end(form) }}
    </form>
{% endblock %}